<div class="container">
  <div class="row mb-5">
    <div class="col-10 mx-auto bg-info">
      <div class="row">
        <% @users.each do |user| %>
          <div class="col-3">
            <%= link_to user_path(user) do %>
            <div class="row mt-4">
              <div class="mx-auto">
                <% if user.image? %>
                  <%= image_tag user.image.url, class: "icon border" %>
                <% end %>
              </div>
            </div>
            <div class="row mt-3">
              <div class="mx-auto">
                <%= user.name %>
              </div>
            </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
