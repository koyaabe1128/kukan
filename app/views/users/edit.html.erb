<div class="container">
  <div class="row mt-5">
    <div class="col-10 mx-auto">
      <div class="row">
        <div class="col-3 border-right">
          <%= render "users/user_setting_nav", user: @user %>
        </div>
        <div class="col-9 bg-primary">
          <%= form_with(model: @user, local:true) do |f| %>
          <div class="row">
            <div class="col-10 mx-auto mt-4 bg-success">
              <div class="row">
                <div class="mx-auto icon">
                  a
                </div>
              </div>
              <div class="row mt-5">
                <div class="col-4">
                  <%= f.label :name, "ユーザー名" %>
                </div>
                <div class="col-8">
                  <%= f.text_field :name, class: "form-control" %>
                </div>
              </div>
              <div class="row mt-5">
                <div class="col-4">
                  <%= f.label :prefecture, "活動場所" %>
                </div>
                <div class="col-8">
                  <%= f.select :prefecture, User.prefectures.keys,{ include_blank: "選択してください"}, { class: "form-control"} %>
                </div>
              </div>
              <div class="row mt-5">
                <div class="col-4">
                  <%= f.label :genre, "ジャンル" %>
                </div>
                <div class="col-8">
                  <%= f.select :genre, User.genres.keys,{ include_blank: "選択してください"}, { class: "form-control"} %>
                </div>
              </div>
              <div class="row mt-5">
                <div class="col-4">
                  <%= f.label :introduction, "自己紹介" %>
                </div>
                <div class="col-8">
                  <%= f.text_area :introduction, class: "form-control" %>
                </div>
              </div>
              <div class ="row mt-5">
                <div class="mx-auto mt-3">        
                  <%= f.submit "完了", class: "submit-btn" %>
                </div>    
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>