<div class="container">
  <div class="row mt-3 mb-5">
    <div class="col-10 mx-auto">
      <div class="row">
        <div class="col-5 border-right">
          <%= render "users/user_nav", user: @user %>
        </div>
        <div class="col-7 my-4">
          <div class="row">
            <div class="col-9 mx-auto">
              <i class="fas fa-user mr-2"></i><%= @user.name %>
              <% if @user.prefecture.present? || @user.genre.present? || @user.introduction.present? %>
                <% if @user.prefecture.present? %>
                  <div class="mt-3"><i class="fas fa-map-marker-alt mr-2"></i><%= @user.prefecture %></div>
                <% end %>
                <% if @user.genre.present? %>
                  <div class="mt-3"><i class="fas fa-award mr-2"></i><%= @user.genre %></div>
                <% end %>
                <% if @user.introduction.present? %>
                  <div class="mt-4"><%= safe_join(@user.introduction.split("\n"), tag(:br)) %></div>
                <% end %>
              <% else %>
                <div class="attention-messages mt-4">
                  <% if current_user == @user %>
                    <i class="fas fa-exclamation-circle mr-2"></i>プロフィールを追加しましょう。
                    <%= link_to "こちら", edit_user_path(@user) %>
                  <% else %>
                    <i class="fas fa-exclamation-circle mr-2"></i>プロフィールを追加していません。
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>