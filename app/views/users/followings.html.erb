<div class="container">
  <div class="row mt-3 mb-5">
    <div class="col-10 mx-auto">
      <div class="row">
        <div class="col-5 border-right">
          <%= render "users/user_nav", user: @user %>
        </div>
        <div class="col-7 my-4">
          <div class="row">
            <div class="col-9 mx-auto">
              <% @user.followings.each do |user| %>
              <div class="row mb-4">
                <div class="col-2">
                  <% if user.image? %>
                    <%= image_tag user.image.url, class: "follow-icon border" %>
                  <% end %>
                </div>
                <div class="col-6">
                  <div class="mt-2"><%= user.name %></div>
                </div>
                <div class="col-4">
                  <div class="row mt-1">
                    <%= render "relationships/follow2", user: user %>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>