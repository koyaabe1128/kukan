<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <div class="row ml-5">
        <h5 class="ml-2 font-weight-bold"><%= @event.title %></h5>
      </div>
      <div class="row mt-5">
        <div class="col-6">
          <div class="row">
            <div class="col-9 mx-auto">
              <div class="row">
                <div class="col-3 font-weight-bold">主催者</div>
                <div class="col-9"><%= @event.user.name %></div>
              </div>
              <div class="row mt-3">
                <div class="col-3 font-weight-bold">日時</div>
                <div class="col-9"><%= @event.user.name %></div>
              </div>
              <div class="row mt-3">
                <div class="col-3 font-weight-bold">場所</div>
                <div class="col-9"><%= @event.prefecture %> <%= @event.place %></div>
              </div>
              <div class="row mt-3">
                <div class="col-3 font-weight-bold">料金</div>
                <div class="col-9"><%= @event.price %></div>
              </div>
              <div class="row mt-3 mb-5">
                <div class="col-3 font-weight-bold">ジャンル</div>
                <div class="col-9"><%= @event.genre %></div>
              </div>
              <div class="font-weight-bold">説明欄</div>
              <div class="mt-4"><%= @event.detail %></div>
            </div>
          </div>
          <div class="row">
            <div class ="mt-5 mx-auto" id="likes_btn_<%= @event.id %>">
              <%= render "likes/like", event: @event %>
            </div>
          </div>
          <div class="row">
            <div class="mx-auto mt-5"><%= link_to "＜　一覧に戻る", events_path, class: "link-base" %></div>
          </div>
        </div>
        <div class="col-6">   
          <div class="row">
            <%= image_tag @event.image.url, class: "mx-auto border event-show-img" %>
          </div>
          <div class="row">
            <div class="mx-auto mt-3">
              <% if current_user == @event.user %>
                <%= link_to edit_event_path(@event) do %>
                  <i class="far fa-edit"></i>編集する
                <% end %>
                <%= link_to @event, method: :delete, data: { confirm: "本当に削除しますか？" } do %>
                  <i class="far fa-trash-alt ml-3s"></i>削除する
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
