<div class="container">
  <div class="row mt-3">
    <div class="col-8 mx-auto">
      <div class="row">
        <h6 class="font-weight-bold"><%= @event.title %></h6>
      </div>
      <div class="row">
        <div class="col-5 mt-5">
          <div class="row">
            <div><i class="fas fa-user mr-2"></i><%= @event.user.name %></div>
          </div>
          
          <div class="row mt-3">
            <div><i class="fas fa-clock mr-2"></i>hoge</div>
          </div>
          
          <div class="row mt-3">   
            <div><i class="fas fa-map-marker-alt mr-2"></i><%= @event.prefecture %></div>
          </div>  
        
          <div class="row mt-3">  
            <div><i class="fas fa-yen-sign mr-2"></i><%= @event.price %></div>
          </div>  
            
          <div class="row mt-3">  
            <div><i class="fas fa-award mr-2"></i><%= @event.genre %></div>
          </div>  
            
          <div class="row mt-5">
            <div><%= safe_join(@event.detail.split("\n"), tag(:br)) %></div>
          </div>
          
          <div class="row">
            <div class="mx-auto mt-5">
              <%= render "likes/like", event: @event %>
            </div>
          </div>
          <div class="row">
            <div class="mx-auto mt-5">
              <%= link_to "一覧に戻る", events_path, class: "link-base font-weight-bold" %>
            </div>
          </div>
        </div>
        <div class="col-6 offset-1 mt-5">
          <div class="row">
              <%= image_tag @event.image.url, class: "border event-show-img" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<div class="row">
  <div class="mx-auto mt-3">
    <% if current_user == @event.user %>
      <%= link_to edit_event_path(@event) do %>
        <i class="far fa-edit"></i>編集する
      <% end %>
      <%= link_to @event, method: :delete, data: { confirm: "本当に削除しますか？" } do %>
        <i class="far fa-trash-alt ml-3s"></i>削除する
      <% end %>
    <% end %>
  </div>
</div>
